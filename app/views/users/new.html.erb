<% provide(:title, t(:sign_up)) %>
<h1><%= t(:sign_up) %></h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :churchname %>
			<%= f.text_field :churchname %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit t('pages.signup.create_account'), class: "btn btn-large btn-primary" %>
		<% end %>			
	</div>
</div>